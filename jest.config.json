{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.(ts|mjs)x?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "testMatch": ["**/test/**/*.test.ts"],
  "setupFilesAfterEnv": ["<rootDir>/test/config/jest.setup.js"]
}
